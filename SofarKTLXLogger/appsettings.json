{
  "Logger": {
    "Ip": "127.0.0.1",
    "Port": 8899,
    "SerialNumber": 2387654321,
    "Timeout": 10000
  },
  "InfluxDB": {
    "Enabled": true,
    "Address": "http://127.0.0.1:8086",
    "DbName": "solarman",
    "MetricName": "dev",
    "Timeout": 10000
  },
  "TimescaleDB": {
    "Enabled": true,
    "ConnectionString": "Host=127.0.0.1;Username=myuser;Password=mysecretpassword;Database=electricity;Port=5432"
  },
  "App": {
    "Timeout": 25000,
    "LoggingInterval": 30000,
    "EnableDaytimeChecking": "true",
    "OfflineMode": "false"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ]
  }
}